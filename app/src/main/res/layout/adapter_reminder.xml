<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#EAEAEA"
        android:elevation="0dp"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/type"
                        android:layout_width="40dp"
                        card_view:layout_constraintTop_toTopOf="parent"
                        android:layout_height="40dp"
                        android:src="@drawable/logo"
                        card_view:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dori nomi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        card_view:layout_constraintEnd_toStartOf="@id/cardPercentage"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        card_view:layout_constraintStart_toEndOf="@id/type"
                        card_view:layout_constraintTop_toTopOf="parent"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFC107"
                        card_view:cardCornerRadius="20dp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintTop_toTopOf="@id/type"
                        card_view:layout_constraintBottom_toBottomOf="@id/type"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp">
                    <TextView
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:id="@+id/unit"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_margin="6dp"
                        />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/firstD"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#404040"/>
                        <TextView
                            android:id="@+id/secondD"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:00"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#404040"/>
                        <TextView
                            android:id="@+id/thirdD"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19:00"
                            android:textColor="#404040"/>
                        <TextView
                            android:id="@+id/StartDate"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.04"
                            android:textStyle="bold"
                            android:textColor="#404040"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  -  "
                            android:textStyle="bold"
                            android:textColor="#404040"/>
                        <TextView
                            android:id="@+id/EndDate"
                            android:layout_weight="2"
                            android:gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13.06"
                            android:textStyle="bold"
                            android:textColor="#404040"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/soni"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 dona"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#404040"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:id="@+id/RemainingDose"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="#404040"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#404040"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:id="@+id/totalDose"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="#404040"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>